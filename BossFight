		float heroHealth = 20000f;
		float heroAttack = 200f;
		float heroDefense = 10f;
		string chosenSkill;
		float burnDamageMultiply = 0.05f;
		float fireMultiply = 1.8f;
		int burn = 0;
		int burnCounter = 3;
    int fireCost = 2;
    int heroEnergy = 0;
		
		float enemyHealth = 20000f;
		float enemyAttack = 320f;
		float enemyDefense = 15;
		
		while (enemyHealth > 0 && heroHealth >0)
		{
			Console.Clear();
			Console.WriteLine("Здоровье героя: " + heroHealth + ". Энергия: " + );
			Console.WriteLine("Здоровье врага: " + enemyHealth);
			Console.Write("Выберите скилл: ");
			chosenSkill = Console.ReadLine();
			
			if (burn > 0)
			{
				enemyHealth -= enemyHealth*burnDamageMultiply;
				burn--;
				Console.WriteLine("Враг получил " + (enemyHealth*burnDamageMultiply) + " урона от ожога");
			}
			
			switch (chosenSkill)
			{
				case "Hit":
        heroEnergy++;
				enemyHealth -= heroAttack;
				Console.WriteLine("Вы нанесли " + heroAttack + " урона.");
				break;
				
				case "Fire":
        heroEnergy -= fireCost;
				enemyHealth -= heroAttack*fireMultiply;
				burn = burnCounter;
				Console.WriteLine("Вы нанесли " + (heroAttack*fireMultiply) + " урона и подожгли врага.");
				break; 
			}
			
			Console.WriteLine("Враг атакует");
			heroHealth -= enemyAttack;
			Console.WriteLine("Враг нанёс " + enemyAttack + " урона");
		}
		
		if (enemyHealth <= 0)
		{
			Console.Clear();
			Console.WriteLine("Враг повержен. Победа героя!");
		}
		else if (heroHealth <= 0)
		{
			Console.Clear();
			Console.WriteLine("Победа врага...");
		}
