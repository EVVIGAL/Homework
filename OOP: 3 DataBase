	class DataBase
    {
		List<Players> players = new List<Players>();
    }
	class Players
	{
		private int _uniqueNumbers;
		public int _uniqueNumber;
		private string _name;
		private int _level;
		private bool _ban;

		public Players(string name, int level)
		{
			_name = name;
			_level = level;
			_uniqueNumber = ++_uniqueNumbers;
			_ban = false;
		}

		public void Ban()
        {
			_ban = true;
        }

		public void Unban()
		{
			_ban = false;
		}

		public void ShowInfo()
		{
            Console.WriteLine($"Имя: {_name}\nУровень: {_level}");
		}
	}
}
