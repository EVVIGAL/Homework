using System;

namespace Homework_2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            float rub;
            float usd;
            float eur;
            float moneyToExchange;
            float rubToUsd = 0.05f;
            float rubToEur = 0.04f;
            float usdToRub = 20f;
            float usdToEur = 0.8f;
            float eurToRub = 25f;
            float eurToUsd = 1.25f;
            string exit;
            string userInput;

            Console.Write("Введите баланс рублей на счету: ");
            rub = Convert.ToSingle(Console.ReadLine());
            Console.Write("Введите баланс долларов на счету: ");
            usd = Convert.ToSingle(Console.ReadLine());
            Console.Write("Введите баланс евро на счету: ");
            eur = Convert.ToSingle(Console.ReadLine());
            Console.WriteLine("Нажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
            exit = Console.ReadLine();

            while (exit != "exit")
            {
                Console.WriteLine("Какой обмен вы хотите выполнить?\n1-Рубли перевести в доллары\n2-Рубли перевести в евро\n3-Доллары перевести в рубли\n4-Доллары перевести в евро\n5-Евро перевести в рубли\n6-Евро перевести в доллары");
                userInput = Console.ReadLine();
                Console.WriteLine("Какую сумму обменять?");
                moneyToExchange = Convert.ToSingle(Console.ReadLine());

                switch (userInput)
                {
                    case "1":
                        if (moneyToExchange > rub)
                        {
                            Console.Clear();
                            Console.WriteLine($"Недостаточно средств.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                            exit = Console.ReadLine();
                        }
                        else
                        {
                            rub -= moneyToExchange;
                            usd += moneyToExchange * rubToUsd;
                            Console.Clear();
                            Console.WriteLine($"Перевод выполнен.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                            exit = Console.ReadLine();
                        }
                        break;
                    case "2":
                        if (moneyToExchange > rub)
                        {
                            Console.Clear();
                            Console.WriteLine($"Недостаточно средств.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                            exit = Console.ReadLine();
                        }
                        else
                        {
                            rub -= moneyToExchange;
                            eur += moneyToExchange * rubToEur;
                            Console.Clear();
                            Console.WriteLine($"Перевод выполнен.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                            exit = Console.ReadLine();
                        }
                        break;
                    case "3":
                        if (moneyToExchange > usd)
                        {
                            Console.Clear();
                            Console.WriteLine($"Недостаточно средств.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                            exit = Console.ReadLine();
                        }
                        else
                        {
                            usd -= moneyToExchange;
                            rub += moneyToExchange * usdToRub;
                            Console.Clear();
                            Console.WriteLine($"Перевод выполнен.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                            exit = Console.ReadLine();
                        }
                        break;
                    case "4":
                        if (moneyToExchange > usd)
                        {
                            Console.Clear();
                            Console.WriteLine($"Недостаточно средств.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                            exit = Console.ReadLine();
                        }
                        else
                        {
                            usd -= moneyToExchange;
                            eur += moneyToExchange * usdToEur;
                            Console.Clear();
                            Console.WriteLine($"Перевод выполнен.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                            exit = Console.ReadLine();
                        }
                        break;
                    case "5":
                        if (moneyToExchange > eur)
                        {
                            Console.Clear();
                            Console.WriteLine($"Недостаточно средств.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                            exit = Console.ReadLine();
                        }
                        else
                        {
                            eur -= moneyToExchange;
                            rub += moneyToExchange * eurToRub;
                            Console.Clear();
                            Console.WriteLine($"Перевод выполнен.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                            exit = Console.ReadLine();
                        }
                        break;
                    case "6":
                        if (moneyToExchange > eur)
                        {
                            Console.Clear();
                            Console.WriteLine($"Недостаточно средств.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                            exit = Console.ReadLine();
                        }
                        else
                        {
                            eur -= moneyToExchange;
                            usd += moneyToExchange * eurToUsd;
                            Console.Clear();
                            Console.WriteLine($"Перевод выполнен.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                            exit = Console.ReadLine();
                        }
                        break;
                    default:
                        Console.Clear();
                        Console.WriteLine($"Ошибка ввода.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                        exit = Console.ReadLine();
                        break;
                }
            }
            Console.Clear();
            Console.WriteLine($"Ваш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.");
            Console.WriteLine("Всего хорошего!");
        }
    }
}
