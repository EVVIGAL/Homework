using System;

namespace Homework_2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            float rub, usd, eur, moneyToExchange;
            float rubToUsd = 0.05f;
            float rubToEur = 0.04f;
            float usdToRub = 20f;
            float usdToEur = 0.8f;
            float eurToRub = 25f;
            float eurToUsd = 1.25f;
            string exit;
            int decreasingCurrency, increasingCurrency;

            Console.Write("Введите баланс рублей на счету: ");
            rub = Convert.ToSingle(Console.ReadLine());
            Console.Write("Введите баланс долларов на счету: ");
            usd = Convert.ToSingle(Console.ReadLine());
            Console.Write("Введите баланс евро на счету: ");
            eur = Convert.ToSingle(Console.ReadLine());

            Console.WriteLine("Нажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
            exit = Console.ReadLine();

            while (exit != "exit")
            {
                Console.WriteLine("Какую валюту хотите обменять?\n1-Рубли\n2-Доллары\n3-Евро");
                decreasingCurrency = Convert.ToInt32(Console.ReadLine());
                Console.WriteLine("На какую валюту хотите обменять?\n1-Рубли\n2-Доллары\n3-Евро");
                increasingCurrency = Convert.ToInt32(Console.ReadLine());
                Console.WriteLine("Какую сумму обменять?");
                moneyToExchange = Convert.ToSingle(Console.ReadLine());

                if ((decreasingCurrency == 1 || decreasingCurrency == 2 || decreasingCurrency == 3)&&(increasingCurrency == 1 || increasingCurrency == 2 || increasingCurrency ==3))
                switch (decreasingCurrency)
                {
                    case 1:
                            if (increasingCurrency == 2 && moneyToExchange <= rub)
                            {
                                rub -= moneyToExchange;
                                usd += moneyToExchange * rubToUsd;
                            }
                            else if (increasingCurrency == 3 && moneyToExchange <= rub)
                            {
                                rub -= moneyToExchange;
                                eur += moneyToExchange * rubToEur;
                            }
                            else if (increasingCurrency == 1 && moneyToExchange <= rub)
                            {
                                Console.Clear();
                                Console.WriteLine($"Одинаковая валюта списания и зачисления, баланс без изменений.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить.");
                                Console.ReadKey();
                            }
                            else
                            {
                                Console.Clear();
                                Console.WriteLine($"Недостаточно средств.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить.");
                                Console.ReadKey();
                            }
                            Console.Clear();
                            Console.WriteLine($"Ваш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                            exit = Console.ReadLine();
                            break;
                    case 2:
                        if (increasingCurrency == 1 && moneyToExchange <= usd)
                        {
                            usd -= moneyToExchange;
                            rub += moneyToExchange * usdToRub;
                        }
                        else if (increasingCurrency == 3 && moneyToExchange <= usd)
                        {
                            usd -= moneyToExchange;
                            eur += moneyToExchange * usdToEur;
                        }
                            else if (increasingCurrency == 2 && moneyToExchange <= usd)
                            {
                                Console.Clear();
                                Console.WriteLine($"Одинаковая валюта списания и зачисления, баланс без изменений.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить.");
                                Console.ReadKey();
                            }
                            else
                            {
                                Console.Clear();
                                Console.WriteLine($"Недостаточно средств.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить.");
                                Console.ReadKey();
                            }
                            Console.Clear();
                            Console.WriteLine($"Ваш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                            exit = Console.ReadLine();
                            break;
                    case 3:
                        if (increasingCurrency == 1 && moneyToExchange <= eur)
                        {
                            eur -= moneyToExchange;
                            rub += moneyToExchange * rubToEur;
                        }
                        else if (increasingCurrency == 2 && moneyToExchange <= eur)
                        {
                            eur -= moneyToExchange;
                            usd += moneyToExchange * usdToEur;
                        }
                            else if (increasingCurrency == 3 && moneyToExchange <= eur)
                            {
                                Console.Clear();
                                Console.WriteLine($"Одинаковая валюта списания и зачисления, баланс без изменений.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить.");
                                Console.ReadKey();
                            }
                            else
                            {
                                Console.Clear();
                                Console.WriteLine($"Недостаточно средств.\nВаш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить.");
                                Console.ReadKey();
                            }
                        Console.Clear();
                        Console.WriteLine($"Ваш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.\nНажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                        exit = Console.ReadLine();
                        break;
                }
                else
                {
                    Console.WriteLine("Ошибка ввода. Нажмите Enter.");
                    Console.ReadKey();
                    Console.Clear();
                    Console.WriteLine($"Ваш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.");
                    Console.WriteLine("Нажмите Enter, чтобы продолжить работу с обменником.\nВведите 'exit' и нажмите Enter, чтобы выйти.");
                    exit = Console.ReadLine();
                }
            }
            Console.Clear();
            Console.WriteLine($"Ваш текущий баланс:\n{rub} рублей, \n{usd} долларов, \n{eur} евро.");
            Console.WriteLine("Всего хорошего!");
        }
    }
}
