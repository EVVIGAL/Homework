using System;

namespace Homework_2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string password = "Насос";
            string userInput = "0";
            int tryingCounter = 3;

            if (tryingCounter > 0)
            {
                while (tryingCounter > 0 && userInput != password)
                {
                    Console.Write("Чтобы получить тайное сообщение, введите пароль: ");
                    userInput = Console.ReadLine();

                    if (userInput != password)
                    {
                        tryingCounter--;
                        Console.Clear();
                        Console.WriteLine("Неверный пароль. Осталось попыток: " + tryingCounter);
                    }
                }
            }

            if (tryingCounter <= 0)
            {
                Console.Clear();
                Console.WriteLine("Доступ заблокирован. Превышен лимит попыток ввода пароля.");
            }
            else
            {
                Console.Clear();
                Console.WriteLine("Я приду на пятый день, с востока!");
            }
        }
    }
}
