using System;

namespace Homework_2
{
	internal class Program
	{
		static void Main(string[] args)
		{
			int number;
			int numberOfDegree = 2;
			int degree = 0;
			int neededNumber = 1;
			Random random = new Random();

			number = random.Next(0, 100);
			Console.WriteLine("Число: " + number);

			while (neededNumber <= number)
            {
				degree++;
				neededNumber *= numberOfDegree;
			}

			Console.WriteLine("Минимальная степень двойки, превосходящая заданное число: " + degree);
			Console.WriteLine("Число 2 в найденной степени: " + neededNumber);
			Console.ReadKey();			
		}
	}
}
