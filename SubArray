using System;

namespace Homework_2
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int neededNumber = 0;
            int counter = 1;
            int maximumCounter = 0;
            int minimumCounter = 1;
            Random random = new Random();
            int[] array = new int[30];

            for (int i = 0; i < array.Length; i++)
            {
                array[i] = random.Next(0, 10);
                Console.Write(array[i] + " ");
            }

            for (int i = 1; i < array.Length; i++)
            {
                if (array[i] == array[i - 1])
                {
                    counter++;
                    
                    if (counter > maximumCounter)
                    {
                        neededNumber = array[i];
                        maximumCounter = counter;
                    }  
                }
                else
                {
                    counter = minimumCounter;
                }
            }

            Console.WriteLine("\n\nЧисло: " + neededNumber);
            Console.WriteLine("Кол-во: " + maximumCounter);
            Console.ReadKey();
        }
    }
}
